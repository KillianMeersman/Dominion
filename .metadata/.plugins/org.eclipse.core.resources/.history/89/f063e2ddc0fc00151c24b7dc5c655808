package Engine;

import java.awt.Image;
import java.util.ArrayList;
import java.util.List;

public class Player {
	private String name = null;
	private List<Card> deck = new ArrayList<Card>();
	private List<Card> discardPile = new ArrayList<Card>();
	
	private Card[] getDeckCards(int amount) {
		Card[] output = new Card[amount];
		
		for (int i = 0; i < amount; i++) {
			output[i] = deck.get(i);
			deck.remove(i);
		}
		return output;
	}
	
	private Card[] getDiscardPileCards(int amount) {
		Card[] output = new Card[amount];
		
		for (int i = 0; i < amount; i++) {
			output[i] = deck.get(i);
			deck.remove(i);
		}
		return output;
	}
	
	public String getName() {
		return name;
	}
	
	public Image getAvatar() {
		return avatar;
	}
	
	public Card[] drawDeckCards(int amount) {
		if (deck.size() >= amount) {
			return getDeckCards(amount);
		}
		else {
			return 
		}
	}
	
	public Player(String name, Image avatar) {
		this.name = name;
		this.avatar = avatar;
	}
}
